<section>
  <div class="row">
    <div class="background">
      <div class="container">

        <div class="col-md-4 col-md-offset-4">
          <div class="signuppanel">
            <h2>Sign up</h2>
            <br>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="field">
                <%= f.label :email, class: "formlabel"%><br/>
                <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
              </div>

              <div class="field">
                <%= f.label :password, class: "formlabel" %>
                <% if @validatable %>
                <em class="formlabel">(<%= @minimum_password_length %> characters min)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off" , :placeholder => "Password" %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation, class: "formlabel" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off" , :placeholder => "Re-type Password" %>
              </div>
              <br>

              <div class="actions">
                <%= f.submit "Sign up", class: "btn btn-primary btn-signup" %>
              </div>
              <% end %>
              <br>

               <div class="signuplink"> 
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
