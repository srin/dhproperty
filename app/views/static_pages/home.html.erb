<section>
	<div class="row">
	<div class="background">
		<div class="container-fluid">
			<div id="homepanel" class="container">
			<div class="row">

				<div class="col-md-10 col-md-offset-1">
					
					<div class="homepaneltext" align="center">
						<h1><strong>Accomable</strong></h1>
						<h3>Accessible homes, apartments, swaps and holiday rentals available around the world</h3>


					</div>

					
				</div>
			</div>
		</div>

			<div class="container">
			<div class="row">
				<div class="col-md-4 col-md-offset-4" id="lowerpanel">

					<div class="homeactions" align="center">
						<div class="form-inline" id="search">
          				<%= search_form_for @q, url: search_posts_path,
                        html: { method: :post } do |f| %>

                        <%= f.search_field :country_or_city_cont, :placeholder => "Town / city / country"%>
                        <%= f.submit class: "btn btn-success" %>
                        <%end%>
        				</div>	
					</div>
				</div>				
			</div>
			</div>

			<div class="container">
			<div class="row">
				

					<div id="bottombuttons">
						<%= link_to "List a property", new_post_path, class: "btn btn-primary btn-lg" %>
						<%= link_to "Just browse", posts_path, class: "btn btn-primary btn-lg" %>
					</div>
								
			</div>
			</div>
		</div>
	</div>	
</div>

</section>
